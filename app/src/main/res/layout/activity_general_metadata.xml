<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ImageView to display the selected media -->
    <ImageView
        android:id="@+id/mediaImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:src="@drawable/placeholder_image" />

    <!-- EditText for document type -->
    <EditText
        android:id="@+id/documentTypeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Document Type"
        android:layout_marginBottom="8dp"/>

    <!-- EditText for expiry date -->
    <EditText
        android:id="@+id/expiryDateEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Expiry Date (if applicable)"
        android:layout_marginBottom="8dp"/>

    <!-- EditText for additional information -->
    <EditText
        android:id="@+id/otherInfoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Additional Information"
        android:layout_marginBottom="8dp"/>

    <!-- Button to select a file -->
    <Button
        android:id="@+id/selectFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select File" />

    <!-- Button to upload the file and metadata -->
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_marginTop="16dp" />
</LinearLayout>
